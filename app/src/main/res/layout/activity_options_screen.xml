<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_reset_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonResetHighScore"
        android:text="@string/btn_reset_highscore"
        app:layout_constraintBottom_toTopOf="@+id/sun"
        app:layout_constraintEnd_toStartOf="@+id/btn_reset_highscore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streak_text" />

    <Button
        android:id="@+id/btn_generate_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonGenerateSchedule"
        android:text="@string/btn_generate_schedule"
        app:layout_constraintBottom_toTopOf="@+id/sun"
        app:layout_constraintEnd_toStartOf="@+id/btn_reset_queue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streak_text" />

    <Button
        android:id="@+id/btn_reset_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonResetQueue"
        android:text="@string/btn_reset_queue"
        app:layout_constraintBottom_toBottomOf="@+id/btn_generate_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_generate_schedule"
        app:layout_constraintTop_toTopOf="@+id/btn_generate_schedule" />

</LinearLayout>
